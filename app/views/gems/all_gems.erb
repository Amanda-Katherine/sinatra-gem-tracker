<% if logged_in? %>
    <h3>Welcome, <%= current_user.username %> </h3>
<% else %>
    <h3>Hey stranger, feel free to sign up to add to our gem library</h3>
<% end %>


<% @gems.each do |gem| %>
<span class="title"><%= gem.name %>:</span><span class="description"><%= gem.description %></span><br>
<% end %>

