<% if logged_in? %>
    <h3>Welcome, <%= current_user.username %> </h3>
<% else %>
    <h3>Hey stranger, feel free to sign up to add to our gem library</h3>
<% end %>

<h4>All Gems Created</h4>
<% @gems.each do |gem| %>
<span><a class="gem-title" href="/gems/<%=gem.id%>"><%= gem.name %></a> - </span>
<span class="description"><%= gem.description %></span><br>
<% end %>

